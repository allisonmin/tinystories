<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/javascripts/clientSide.js"></script>
		<script src="/javascripts/flickr.js"></script>
		<script src="/javascripts/example.js"></script>
	</head>

	<body>
		<div id='decor'></div>
		<header>
			<a id='logotext' href='/'>tiny<strong>stories</strong></a>
		</header>
		<!-- end of header -->

		<div id='user'>
			<h2 id='username-title'></h2>
			<form id='username-form'>
				<input class='text-input-flat' type='text' name='username' placeholder='marktwain'>
				<input class='button-flat' type='submit' value='Submit'>
			</form>
		</div>

		<!-- <p> There are currently <span id="numPlayers">no</span> players.</p> -->
		<h2 id='welcome-user'></h2>
		<p id='waiting' hidden>Waiting for another player</p>
		
		<div id='flickr' hidden>
			<!-- Flickr Search Bar -->
			<div id='flickr-search'>
				<form id='flickr-form'>
					<h2>Pick a Story Cover</h2><br>
					<input id='search-term' class='text-input-flat' type='text' name='search'>
					<input id='search-submit' class='button-flat' type='submit' value='Search'>
				</form>
			</div>
			<!-- end of Flickr Search Bar -->

			<div id='gallery'>
				<ul>
				</ul>
			</div>
		</div>
		<!-- end of flickr -->

		<div id='story-cover'>
		</div>

		<div id='story-title' hidden>
			<form id='title-form'>
				<h2>Enter a Story Title</h2><br>
				<input id='title' class='text-input-flat' type='text' name='title' placeholder='The Last Leaf'>
				<input class='button-flat' type='submit' value='Submit'>
			</form>
		</div>

		<div id='story' hidden>
			<h2 id='lineMessage' hidden>This is where you add your lines</h2>
			<div id='story-lines'>
				<ul>
				</ul>
			</div>
			<div id='max'>
			</div>
			<form id='line-form' hidden>
				<textarea class='text-input-flat' type='text' name='line'></textarea>
				<input class='button-flat' type='submit' value='+ Add Line'>
			</form>
		</div>

		<!-- <footer>
			<p>&copy; <a href="mailto:amin1@andrew.cmu.edu">Allison Min</a></p>
		</footer> -->

	</body>
</html>